<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/my_background_light"
        android:layout_weight="2">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="120px"
            android:layout_marginTop="480px"
            android:text="Enter Your Last Name"
            android:textColor="@color/my_text_default"
            android:textSize="88pt"/>
        <EditText
            android:id="@+id/lname"
            android:layout_width="450dp"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingBottom="8dp"
            android:paddingTop="70dp"
            android:layout_marginStart="60dp"
            android:textColor="@color/my_text_default"
            android:textColorHint="@color/my_text_subtitle"
            android:hint="Last Name"
            android:background="@color/my_background_light"
            android:textSize="64pt"
            android:imeOptions="actionGo"
            android:inputType="text"/>
    </LinearLayout>



    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/my_background_dark"
        android:layout_weight="2">

        <Button
            android:id="@+id/backLastName"
            android:layout_marginTop="480px"
            android:paddingTop="54px"
            android:paddingBottom="42px"
            android:paddingHorizontal="66px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/my_text_default"
            android:background="@color/my_background_dark"
            android:text="Back"
            android:onClick="cancelHandler"/>

        <Button
            android:id="@+id/proceedLastName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/my_background_dark"
            android:onClick="activeHandler"
            android:paddingHorizontal="66px"
            android:paddingTop="54px"
            android:paddingBottom="42px"
            android:text="Next"
            android:textColor="@color/my_text_default" />
    </LinearLayout>
</LinearLayout>