<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/my_background_light"
        android:layout_weight="3">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="120px"
            android:layout_marginTop="160px"
            android:text="Registration Successful"
            android:textColor="@color/my_text_default"
            android:textSize="88pt"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="120px"
            android:layout_marginTop="36px"
            android:text="This is your registration details."
            android:textColor="@color/my_text_subtitle"
            android:textSize="48pt"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="120px"
            android:layout_marginTop="160px"
            android:text="First Name: "
            android:textColor="@color/my_text_default"
            android:textSize="48pt"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="120px"
            android:layout_marginTop="36px"
            android:text="Last Name: "
            android:textColor="@color/my_text_default"
            android:textSize="48pt"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="120px"
            android:layout_marginTop="36px"
            android:text="Model Number: "
            android:textColor="@color/my_text_default"
            android:textSize="48pt"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="120px"
            android:layout_marginTop="36px"
            android:text="Serial Number: "
            android:textColor="@color/my_text_default"
            android:textSize="48pt"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="120px"
            android:layout_marginTop="36px"
            android:text="Email Id: "
            android:textColor="@color/my_text_default"
            android:textSize="48pt"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="120px"
            android:layout_marginTop="36px"
            android:text="Zip/Postal Code"
            android:textColor="@color/my_text_default"
            android:textSize="48pt"/>
    </LinearLayout>



    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/my_background_dark"
        android:layout_weight="2">

        <Button
            android:id="@+id/exit"
            android:layout_marginTop="480px"
            android:paddingTop="54px"
            android:paddingBottom="42px"
            android:paddingHorizontal="66px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/my_text_default"
            android:background="@color/my_background_dark"
            android:text="Exit"
            android:onClick="cancelHandler"/>
    </LinearLayout>
</LinearLayout>